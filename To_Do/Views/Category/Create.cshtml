@{
}


<div class="row">
    <div class="col-md-12 row create-category-panel">
        <div class="header-text">
            Utwórz nową kategorię
        </div>
        <form asp-action="Create" class="row">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="col-md-11">
                <input asp-for="Name" class="form-control" placeholder="Nazwa kategorii" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="col-md-1">
                <input type="submit" value="Utwórz" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>


