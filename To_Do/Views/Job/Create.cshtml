@model To_Do.ViewModels.Job.CreateJobVM
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}


<div class="row">
    <div class="col-md-12 row create-job-panel">
        <div class="header-text">
            Utwórz zadanie
        </div>
        <form asp-action="Create" class="row">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input hidden asp-for="ScheduleId" />
            <div class="col-md-5">
                <input asp-for="Name" class="form-control" placeholder="Nazwa listy zadań" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="col-md-5">
                @Html.DropDownListFor(m => m.CategoryId, Model.Categories, new { @class = "form-control" })
                <span asp-validation-for="CategoryId" class="text-danger"></span>
            </div>
            <div class="col-md-1">
                <input type="submit" value="Utwórz" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }
