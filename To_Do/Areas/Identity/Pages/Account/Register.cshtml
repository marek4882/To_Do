@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<div class="row offset-2 col-md-8">
    <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="row row-space">
            <div class="form-group header-text">
                Rejestracja
            </div>
        </div>
        <div class="row row-space">
            <div class="col-md-6">
                <div class="form-group">
                    <label class="form-text"></label>
                    <input asp-for="Input.FirstName" class="form-control" placeholder="Imię" />
                    <span asp-validation-for="Input.FirstName" class="text-danger"></span>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <label class="form-text"></label>
                    <input asp-for="Input.LastName" class="form-control" placeholder="Nazwisko" />
                    <span asp-validation-for="Input.LastName" class="text-danger"></span>
                </div>
            </div>
        </div>
        <div class="row row-space">
            <div class="col-md-12">
                <div class="form-group">
                    <label class="form-text"></label>
                    <input asp-for="Input.Email" class="form-control" placeholder="Email"/>
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
            </div>
        </div>

        <div class="row row-space">
            <div class="col-md-6">
                <div class="form-group">
                    <label class="form-text"></label>
                    <input asp-for="Input.Password" class="form-control" placeholder="Hasło" />
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <label class="form-text"></label>
                    <input asp-for="Input.ConfirmPassword" class="form-control" placeholder="Potwierdź hasło" />
                    <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                </div>
            </div>
        </div>
        <div class="row row-space">
            <div class="form-group" style="text-align:center">
                <input type="submit" value="Zarejestruj" class="signup-button" /><br />
            </div>
        </div>

    </form>
</div>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}


